<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Application">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meet"
        android:id="@+id/btn_sendRequest"
        android:layout_below="@+id/edit_main_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_main_msg"
        android:hint="Message"
        android:layout_below="@+id/edit_main_to"
        android:layout_alignRight="@+id/edit_main_to"
        android:layout_alignEnd="@+id/edit_main_to"
        android:inputType="textImeMultiLine"
        android:layout_alignLeft="@+id/edit_main_to"
        android:layout_alignStart="@+id/edit_main_to" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_main_to"
        android:layout_marginTop="72dp"
        android:hint="To:"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:text="MeetMe Now!"
        android:id="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="18842 - Distributed Systems (c) "
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Message sent to Behrooz."
        android:id="@+id/txt_result"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/btn_sendRequest"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
